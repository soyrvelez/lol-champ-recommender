<body class="text-center">

  <main class="form-signin">
    <form action="/<%= userid %>/?_method=PUT" method="POST">
      <h1 class="h3 mb-3 fw-normal">Edit User: <%= userid %></h1>

      <div class="form-floating">
        <input type="text" class="form-control" id="name" name="name" placeholder="Full Name">
        <label for="name"><%= name %></label>
      </div>

      <button class="w-100 btn btn-lg btn-primary" type="submit">Update User</button>
      <a href="/profile" class="btn btn-danger">Cancel Update</a>
      <p class="mt-5 mb-3 text-muted">&copy; 2023</p>
    </form>
  </main>



    </body>
