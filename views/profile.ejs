<body>
  <div class="container">
    <div class="container text-center mt-5">
      <h1><%= name %></h1>
      <h4>User Profile</h4>
    </div>
    <div class="d-flex justify-content-center mt-5">
      <a class="btn btn-outline-secondary me-2" target="__blank" href="/<%= id %>/edit">Edit</a>
      <a class="btn btn-outline-danger" target="__blank" href="/<%= id %>/delete">Delete</a>
    </div>
  </div>
  <div class="container mt-5">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead class="table-dark">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Prompt</th>
            <th scope="col">Recommended Champion</th>
          </tr>
        </thead>
        <tbody>
          <% for( let index = 0; index < userRecommendations.length; index++ ) { %>
            <tr>
              <th scope="row"><%= userRecommendations[index].id %></th>
              <td><%= userRecommendations[index].prompt %></td>
              <td><a href="/recommendation/<%= userRecommendations[index].recommendedChampion %>"><%= userRecommendations[index].recommendedChampion %></a></td>
          </tr>
          <% } %>
        </tbody>
      </table>
  </div>
</div>
</body>
